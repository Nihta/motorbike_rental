<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="mbr_motorcycle_action" model="ir.actions.act_window">
    <field name="name">Motorbike</field>
    <field name="res_model">mbr.motorcycle</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="mbr_motorcycle_view_form" model="ir.ui.view">
    <field name="name">mbr.motorcycle.form</field>
    <field name="model">mbr.motorcycle</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="d-block d-md-flex justify-content-between">
            <group>
              <field name="name"/>
              <field name="active"/>
            </group>
            <field name="image" widget="image" class="oe_avatar"/>
          </div>
          <notebook>
            <page string="General">
              <group>
                <field name="mode_id"/>
                <field name="year"/>
                <field name="license_plate"/>
                <field name="chassis_number"/>
                <field name="discount" widget="percentage"/>
                <field name="description"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
