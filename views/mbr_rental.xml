<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="mbr_rental_action" model="ir.actions.act_window">
    <field name="name">Motorcycle rentals</field>
    <field name="res_model">mbr.rental</field>
    <field name="view_mode">tree,kanban,form,calendar</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No data to display.
      </p>
    </field>
  </record>

  <record id="mbr_rental_view_tree" model="ir.ui.view">
    <field name="name">mbr.rental.tree</field>
    <field name="model">mbr.rental</field>
    <field name="arch" type="xml">
      <tree string="Rentals">
        <field name="name"/>
        <field name="customer_id"/>
        <field name="motorcycle_id"/>
        <field name="date_start"/>
        <field name="date_end"/>
      </tree>
    </field>
  </record>

  <record id="mbr_rental_view_kanban" model="ir.ui.view">
    <field name="name">mbr.rental.kanban</field>
    <field name="model">mbr.rental</field>
    <field name="arch" type="xml">

      <kanban default_group_by="state" class="o_kanban_small_column">
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
              <div class="o_kanban_card_content">
                <field name="name" modifiers="{'required': true}"/>
              </div>
            </div>
          </t>
        </templates>
      </kanban>

    </field>
  </record>

  <record id="mbr_rental_view_form" model="ir.ui.view">
    <field name="name">mbr.rental.form</field>
    <field name="model">mbr.rental</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <field name="state" widget="statusbar"/>
          <button type="object" name="action_create_invoice" string="Create invoice"
                  attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                  class="oe_highlight"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <label for="date_start" string="Date Rental"/>
            <div class="o_row">
              <field name="date_start" widget="daterange" nolabel="1" class="oe_inline"
                     options="{'related_end_date': 'date_end'}"/>
              <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
              <field name="date_end" widget="daterange" nolabel="1" class="oe_inline"
                     options="{'related_start_date': 'date_start'}"/>
            </div>
            <field name="model_id"/>
            <field name="motorcycle_id"
                   options="{'no_create': True, 'no_create_edit':True}"
                   attrs="{'invisible': [('model_id', '=', False),'|',('date_start', '=',
            False),'|',('date_end', '=', False)]}"/>
            <field name="customer_id"/>
            <field name="discount"/>
            <field name="extra_info"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record id="mbr_rental_view_calendar" model="ir.ui.view">
    <field name="name">mbr.rental.calendar</field>
    <field name="model">mbr.rental</field>
    <field name="arch" type="xml">
      <calendar
        string="Rental"
        date_start="date_start"
        color="customer_id"
        date_stop="date_end"
      >
        <field name="name"/>
        <field name="customer_id"/>
      </calendar>
    </field>
  </record>
</odoo>
